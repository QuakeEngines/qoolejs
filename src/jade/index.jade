doctype html
html
	head
		title qoole gui tests
		link(rel="stylesheet",href="lib/font-awesome.css")
		link(rel="stylesheet",href="css/style.css")
	body
		.interface
			.toolbar
				.logo QooleJS
				a.panel-trigger.fa.fa-bars.selected
				.left-bar
					| Mode: &nbsp;
					a.mode-move.selected M
					a.mode-scale S
					a.mode-rotate R
				.right-bar
					a.fullscreen-trigger Full Screen
			.left-panel.opened
				.level-name Test Level
				ul.entities
					li Block 1
			.views
				canvas.canvas.canvas-tl
				canvas.canvas.canvas-tr
				canvas.canvas.canvas-bl
				canvas.canvas.canvas-br

		//- lib
		script(src="lib/jquery.js")
		script(src="lib/lodash.js")
		script(src="lib/three.min.js")
		script(src="lib/threex.keyboardstate.js")
		//- ql
		script(src="js/ql/ql.js")
		script(src="js/ql/ext/quad.js")
		script(src="js/ql/ext/boxGeometry.js")
		script(src="js/ql/gui/view2d.js")
		script(src="js/ql/gui/view3d.js")
		script(src="js/ql/gui/editor.js")
		//- app
		script(src="js/main.js")