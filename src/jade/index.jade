doctype html
html
	head
		title QooleJS Alpha
		link(rel="stylesheet",href="lib/font-awesome.css")
		link(rel="stylesheet",href="css/style.css")
	body
		.gui
			.toolbar
				.logo QooleJS
				a.panel-toggle.fa.fa-bars.toggled(
					data-toggle-ref=".left-panel",
					data-toggle-class="opened"
				)
				.left-bar
					| Mode: &nbsp;
					a.obj-mode-option.selected(
						data-option-param="obj-mode",
						data-option-value="move"
					) M
					a.obj-mode-option(
						data-option-param="obj-mode",
						data-option-value="scale"
					) S
					a.obj-mode-option(
						data-option-param="obj-mode",
						data-option-value="rotate"
					) R
				.right-bar
					a.debug-toggle(
						data-toggle-ref=".indexes",
						data-toggle-class="visible",
						data-toggle-param="debug"
					) Debug
					input.indexes(placeholder="Indexes")
					a.fullscreen-toggle(
						data-toggle-ref=".canvas-tr",
						data-toggle-class="fullscreen"
					) Full Screen
			.left-panel.opened
				.level-name Test Level
				.scene-panel
					.section
						.title Lights
					.section
						.title Cameras
					.section
						.title Meshes
						a.new-mesh-trigger(
							data-trigger-method="newMesh"
						) New Mesh
						a.clear-scene-trigger(
							data-trigger-method="clearScene"
						) Clear Scene
						ul.entities#mesh-entities
							li
								| Block 1
								a.entity-edit-trigger(
									data-trigger-method="edit",
									data-trigger-id="1"
								)
				.object-panel
			.views
				canvas.canvas.canvas-tl
				canvas.canvas.canvas-tr
				canvas.canvas.canvas-bl
				canvas.canvas.canvas-br

		//- lib
		script(src="lib/jquery.js")
		script(src="lib/lodash.js")
		script(src="lib/three.min.js")
		script(src="lib/threex.keyboardstate.js")
		//- ql
		script(src="js/ql/ql.js")
		script(src="js/ql/ext/vector2.js")
		script(src="js/ql/ext/vector3.js")
		script(src="js/ql/ext/boxGeometry.js")
		script(src="js/ql/ext/quad.js")
		script(src="js/ql/ext/boxGeometry.js")
		script(src="js/ql/gui/view2d.js")
		script(src="js/ql/gui/view3d.js")
		script(src="js/ql/gui/editor.js")
		//- app
		script(src="js/main.js")
